        <div class="table-container">
        <table id="tblSickLeaves" border="1">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>EmployeeID</th>
                    <th>From</th>
                    <th>To</th>
                    <th>Info</th>
                </tr>
            </thead>
            <tbody>
                <!-- Rows loaded by JS -->
            </tbody>
        </table>
        </div>
    </body>
}

