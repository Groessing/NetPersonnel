@using System.Security.Claims
@section Scripts {
    <script src="~/js/employees.js"></script>

}
@{
    <body data-role="@User.FindFirst(ClaimTypes.Role).Value" data-employeeid="@User.FindFirst("EmployeeID").Value">
        <button id="btnOpenAddDialog">Add</button>
        <div class="table-container">
        <table id="tblEmployees" border="1">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Department</th>
                    <th>Job Title</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Hire Date</th>
                    <th>Birthday</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <!-- Rows loaded by JS -->
            </tbody>
        </table>
        </div>
        <dialog id="dlgAdd"></dialog>
        <dialog id="dlgEdit"></dialog>

    </body>
}

